<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="practicaltest2017.eim.systems.cs.pub.ro.practicaltest2017.view.PracticalTest2017MainActivity">

    <Button
        android:id="@+id/navigate_to_secondary_activity_button"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/navigate_to_secondary_activity" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <EditText
            android:id="@+id/left_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_row="0"
            android:ems="8"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"
            android:saveEnabled="false"
            android:text="@string/zero" />

        <EditText
            android:id="@+id/right_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="0"
            android:ems="8"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"
            android:saveEnabled="false"
            android:text="@string/zero" />

        <Button
            android:id="@+id/press_me_button"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_row="1"
            android:text="@string/press_me" />

        <Button
            android:id="@+id/press_me_too_button"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="1"
            android:text="@string/press_me_too" />
    </GridLayout>

</LinearLayout>
